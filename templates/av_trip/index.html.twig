{% extends 'base.html.twig' %}

{% block title %}AvTrip index{% endblock %}

{% block body %}
    <h1>AvTrip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Price</th>
                <th>Start</th>
                <th>Finish</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for av_trip in av_trips %}
            <tr>
                <td>{{ av_trip.id }}</td>
                <td>{{ av_trip.name }}</td>
                <td>{{ av_trip.picture }}</td>
                <td>{{ av_trip.description }}</td>
                <td>{{ av_trip.price }}</td>
                <td>{{ av_trip.start ? av_trip.start|date('Y-m-d') : '' }}</td>
                <td>{{ av_trip.finish ? av_trip.finish|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_av_trip_show', {'id': av_trip.id}) }}">show</a>
                    <a href="{{ path('app_av_trip_edit', {'id': av_trip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="flex">
    <a href="{{ path('app_av_trip_new') }}">Create new</a>
    <a href="{{ path('app_av_category_new') }}">Create category</a>
    <a href="{{ path('app_av_country_new') }}">Create country</a>
    </div>


{% endblock %}
