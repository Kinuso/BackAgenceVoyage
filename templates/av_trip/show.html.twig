{% extends 'base.html.twig' %}

{% block title %}AvTrip{% endblock %}

{% block body %}
    <h1>AvTrip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ av_trip.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ av_trip.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ av_trip.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ av_trip.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ av_trip.price }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ av_trip.start ? av_trip.start|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Finish</th>
                <td>{{ av_trip.finish ? av_trip.finish|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_av_trip_index') }}">back to list</a>

    <a href="{{ path('app_av_trip_edit', {'id': av_trip.id}) }}">edit</a>

    {{ include('av_trip/_delete_form.html.twig') }}
{% endblock %}
